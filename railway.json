{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "commands": ["cd backend"]
        },
        "build": {
          "commands": ["npm ci", "npm run build"]
        },
        "start": {
          "cmd": "npm start"
        }
      }
    }
  }
}
