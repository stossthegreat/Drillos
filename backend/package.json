{
  "name": "backend",
  "version": "1.0.0",
  "description": "HabitOS / DrillSergeantAI Backend",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "postinstall": "prisma generate",
    "start": "npm run build && prisma migrate deploy && node dist/server.js",
    "worker:notifications": "node dist/notifications/notifications.worker.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "test": "echo \"No tests configured\" && exit 0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.899.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/swagger": "^9.5.2",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/client": "^6.16.3",
    "axios": "^1.12.2",
    "bullmq": "^5.59.0",
    "fastify": "^5.6.1",
    "firebase-admin": "^13.5.0",
    "form-data": "^4.0.4",
    "ioredis": "^5.8.0",
    "node-cron": "^4.2.1",
    "openai": "^6.0.0",
    "prisma": "^6.16.3",
    "rrule": "^2.8.1",
    "stripe": "^18.5.0",
    "uuid": "^13.0.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "@types/uuid": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
