# DrillSergeant HabitOS Backend Environment Configuration
# Copy this file to .env and replace the placeholder values with your actual credentials

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=8080
HOST=0.0.0.0
BACKEND_PUBLIC_URL=http://localhost:8080

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://username:password@localhost:5432/habitos

# Redis connection string
# Format: redis://username:password@host:port or rediss:// for SSL
REDIS_URL=redis://localhost:6379

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# =============================================================================
# ELEVENLABS CONFIGURATION
# =============================================================================
# Get your API key from: https://elevenlabs.io/ (Profile page)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Voice IDs for each mentor (get from ElevenLabs voices page)
# These are the specific voice IDs for each character
ELEVENLABS_VOICE_MARCUS=your_marcus_voice_id_here
ELEVENLABS_VOICE_DRILL=your_drill_voice_id_here
ELEVENLABS_VOICE_CONFUCIUS=your_confucius_voice_id_here
ELEVENLABS_VOICE_LINCOLN=your_lincoln_voice_id_here
ELEVENLABS_VOICE_BUDDHA=your_buddha_voice_id_here

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
# Get these from Firebase Console > Project Settings > Service Accounts
# Generate a new private key and use the values from the JSON file
FIREBASE_PROJECT_ID=your_firebase_project_id_here
FIREBASE_CLIENT_EMAIL=your_firebase_client_email_here
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_firebase_private_key_here\n-----END PRIVATE KEY-----\n"

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================
# Get your secret key from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
# Get webhook secret from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =============================================================================
# S3 STORAGE CONFIGURATION
# =============================================================================
# Use AWS S3, DigitalOcean Spaces, or any S3-compatible service
S3_ENDPOINT=https://your-s3-endpoint.com
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY=your_s3_access_key_here
S3_SECRET_KEY=your_s3_secret_key_here

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================
# AI/LLM Settings
LLM_MAX_TOKENS=500
LLM_TIMEOUT_MS=10000
LLM_ENABLED=true

# Text-to-Speech Settings
TTS_DAILY_CHAR_CAP_FREE=2500
TTS_DAILY_CHAR_CAP_PRO=15000
TTS_ENABLED=true