# Runtime
NODE_ENV=production
PORT=8080
HOST=0.0.0.0
BACKEND_PUBLIC_URL=https://drillsergeantai-production.up.railway.app
CORS_ORIGIN=https://your-frontend-domain.com

# Postgres (Prisma)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME?schema=public

# Redis (Railway / Upstash)
REDIS_URL=redis://default:YOUR_REDIS_PASSWORD@YOUR_REDIS_HOST:6379

# OpenAI
OPENAI_API_KEY=sk-xxxx
OPENAI_MODEL=gpt-4o-mini
LLM_MAX_TOKENS=500
LLM_TIMEOUT_MS=12000
LLM_ENABLED=true

# ElevenLabs (mentor voices)
ELEVENLABS_API_KEY=xxxxxxxxxxxxxxxxxxxx
ELEVENLABS_VOICE_MARCUS=voice_id_for_marcus
ELEVENLABS_VOICE_DRILL=voice_id_for_drill
ELEVENLABS_VOICE_CONFUCIUS=voice_id_for_confucius
ELEVENLABS_VOICE_LINCOLN=voice_id_for_lincoln
ELEVENLABS_VOICE_BUDDHA=voice_id_for_buddha
TTS_DAILY_CHAR_CAP_FREE=2500
TTS_DAILY_CHAR_CAP_PRO=15000
TTS_ENABLED=true
ELEVENLABS_TTS_TIMEOUT_MS=12000

# Firebase (Push Notifications)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=your_service_account_email@your_project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n

# Stripe (Subscriptions for PRO)
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# S3/MinIO (if you cache generated voice files)
S3_ENDPOINT=https://s3.yourhost.com
S3_BUCKET=voice
S3_ACCESS_KEY=xxxx
S3_SECRET_KEY=xxxx

# Feature toggles
PRO_FEATURES_ENABLED=true
FREE_NOTIFICATIONS_ENABLED=false

# Auth (if using JWT later)
JWT_PUBLIC_KEY_BASE64=
JWT_ISSUER=habitos
JWT_AUDIENCE=habitos-users
